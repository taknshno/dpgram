<% content_for(:title, 'プロフィール') %>
<div class="profile-wrapper">
  <div class="profile-header">
    <div class="profile-icon">
      <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
    </div>
    <section class="profile-list">
      <ul>
        <li>
          <h4>名前</h4>
          <span><%= @user.name %></span>
        </li>
        <li>
          <h4>メールアドレス</h4>
          <span><%= @user.email %></span>
        </li>
        <li>
          <%= link_to 'プロフィールを編集する', edit_user_path(@user.id) %>
        </li>

      </ul>
    </section>
  </div>
  <div class="profile-tab">
    <div class="profile-tab-item">
      <i class="bi bi-bookmark-heart"></i><span>お気に入り</span>
    </div>
  </div>
</div>
